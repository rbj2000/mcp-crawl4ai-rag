# Crawl4AI MCP Server Configuration for RTX 3090 vLLM Setup
# This configuration connects to your local vLLM servers running on 5x RTX 3090

# =============================================================================
# AI Provider Configuration (vLLM)
# =============================================================================

# Primary AI provider
AI_PROVIDER=vllm

# vLLM Server Configuration
# Text LLM Server (GPUs 0-1)
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_API_KEY=EMPTY

# Text and Embedding Models
VLLM_TEXT_MODEL=meta-llama/Llama-3.1-8B-Instruct
VLLM_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
VLLM_EMBEDDING_DIMENSIONS=1024

# Vision Model Configuration (GPUs 3-4)
VLLM_VISION_ENABLED=true
VLLM_VISION_MODEL=llava-hf/llava-v1.6-mistral-7b-hf

# Performance Settings
VLLM_MAX_BATCH_SIZE=32
VLLM_MAX_RETRIES=3
VLLM_TIMEOUT=120.0

# =============================================================================
# Vector Database Configuration
# =============================================================================

# Database Provider (choose one)
VECTOR_DB_PROVIDER=supabase
# VECTOR_DB_PROVIDER=sqlite

# Supabase Configuration (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
EMBEDDING_DIMENSION=1024

# SQLite Configuration (Development)
# SQLITE_DB_PATH=/app/data/vector_db.sqlite
# EMBEDDING_DIMENSION=1024

# =============================================================================
# RAG Strategy Configuration
# =============================================================================

# Enhanced RAG Features
USE_CONTEXTUAL_EMBEDDINGS=true
USE_HYBRID_SEARCH=true
USE_AGENTIC_RAG=true
USE_RERANKING=false
USE_KNOWLEDGE_GRAPH=false

# =============================================================================
# Server Configuration
# =============================================================================

# MCP Server Settings
HOST=0.0.0.0
PORT=8051
TRANSPORT_MODE=sse

# =============================================================================
# Optional: Neo4j Knowledge Graph (if enabled)
# =============================================================================

# Neo4j Configuration (optional)
# USE_KNOWLEDGE_GRAPH=true
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_password
# NEO4J_DATABASE=neo4j

# Knowledge Graph Neo4j (separate from vector DB)
# KG_NEO4J_URI=bolt://localhost:7687
# KG_NEO4J_USER=neo4j
# KG_NEO4J_PASSWORD=your_password
# KG_NEO4J_DATABASE=neo4j

# =============================================================================
# Optional: Reranking Configuration
# =============================================================================

# Reranking Settings (if enabled)
# USE_RERANKING=true
# RERANKING_PROVIDER=huggingface
# RERANKING_MODEL=ms-marco-MiniLM-L-6-v2
# RERANKING_MAX_RESULTS=100
# RERANKING_TIMEOUT=30.0

# =============================================================================
# Logging and Debug
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
